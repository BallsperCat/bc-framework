<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="message" extends="bc-default" namespace="/bc/message">
		<action name="create" class="messageFormAction" method="create">
			<result name="form">/bc/message/form.jsp</result>
		</action>
		<action name="edit" class="messageFormAction" method="edit">
			<result name="form">/bc/message/form.jsp</result>
		</action>
		<action name="save" class="messageFormAction" method="save"/>
		<action name="delete" class="messageFormAction" method="delete"/>

		<action name="list" class="messageViewAction" method="list"/>
		<action name="paging" class="messageViewAction" method="paging"/>
		<action name="data" class="messageViewAction" method="data"/>
	</package>
</struts>