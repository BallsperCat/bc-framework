<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
  "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
  <package name="personal" extends="bc-default" namespace="/bc/personal">
    <action name="edit" class="personalAction" method="edit">
      <result name="form">/bc/desktop/personal/form.jsp</result>
    </action>
    <action name="save" class="personalAction" method="save"/>
    <action name="update" class="personalAction" method="update"/>
  </package>

  <package name="shortcut" extends="bc-default" namespace="/bc/shortcut">
    <!-- 表单 -->
    <action name="create" class="shortcutFormAction" method="create">
      <result name="form">/bc/desktop/shortcut/form.jsp</result>
    </action>
    <action name="edit" class="shortcutFormAction" method="edit">
      <result name="form">/bc/desktop/shortcut/form.jsp</result>
    </action>
    <action name="save" class="shortcutFormAction" method="save"/>
    <action name="selectIconClass" class="shortcutFormAction" method="selectIconClass">
      <result>/bc/desktop/shortcut/selectIconClass.jsp</result>
    </action>
    <action name="save4drag" class="shortcutFormAction" method="save4drag">
      <result name="json" type="freemarker">/cn/bc/web/struts2/json.ftl</result>
    </action>

    <!-- 视图 -->
    <action name="delete" class="shortcutFormAction" method="delete"/>
    <action name="list" class="shortcutViewAction" method="list"/>
    <action name="paging" class="shortcutViewAction" method="paging"/>
    <action name="data" class="shortcutViewAction" method="data"/>
  </package>
</struts>